
<%= simple_form_for(@person) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :surname %>
    <%= f.input :active %>
  </div>

  <hr/>
  <hr/>
  <strong><h2 style="font-size: 20px;background-color: midnightblue;color: white">Add Email(s)</h2></strong>
  <div class="jumbotron">
    <div class="nested_fields">
      <%= link_to_add_association 'Add', f, :emails, class: 'fa fa-plus',style:"font-size:15px;color:green"%>
      <%= f.simple_fields_for :emails do |email| %>
        <%= render 'email_fields', :f => email %>
      <% end %>
    </div>
  </div>
  <hr/>
  <hr/>

  <strong><h2 style="font-size: 20px;background-color: midnightblue;color: white">Add Telephone(s)</h2></strong>
  <div class="jumbotron">
    <div class="nested_fields">
      <%= link_to_add_association 'Add', f, :telephones, class: 'fa fa-plus',style:"font-size:15px;color:green"%>
      <%= f.simple_fields_for :telephones do |phone| %>
        <%= render 'telephone_fields', :f => phone %>
      <% end %>
    </div>
  </div>
  <hr/>
  <hr/>


  <strong><h2 style="font-size: 20px;background-color: midnightblue;color: white">Add Address</h2></strong>
  <div class="jumbotron">
    <div class="nested_fields">
      <%= link_to_add_association 'Add', f, :addresses, class: 'fa fa-plus',style:"font-size:15px;color:green"%>
      <%= f.simple_fields_for :addresses do |address| %>
        <%= render 'address_fields', :f => address %>
      <% end %>
    </div>
  </div>
  <hr/>
  <hr/>

  <strong><h2 style="font-size: 20px;background-color: midnightblue;color: white">Qualifications</h2></strong>
  <div class="jumbotron">
    <div class="nested_fields">
      <%= link_to_add_association 'Add', f, :qualifications, class: 'fa fa-plus',style:"font-size:15px;color:green"%>
      <%= f.simple_fields_for :qualifications do |qualification| %>
        <%= render 'qualification_fields', :f =>  qualification%>
      <% end %>
    </div>
  </div>
  <hr/>
  <hr/>

  <strong><h2 style="font-size: 20px;background-color: midnightblue;color: white">Employment History</h2></strong>
  <div class="jumbotron">
    <div class="nested_fields">
      <%= link_to_add_association 'Add', f, :employments, class: 'fa fa-plus',style:"font-size:15px;color:green"%>
      <%= f.simple_fields_for :employments do |job| %>
        <%= render 'employment_fields', :f =>  job%>
      <% end %>
    </div>
  </div>
  <hr/>
  <hr/>


  <br>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<br>