<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <strong>Month:</strong><br><br>
  <textarea rows="1" cols="80" readonly><%= @cashflow.month %></textarea>
</div>

<div class="jumbotron">
  <strong>Year:</strong><br><br>
  <textarea rows="1" cols="80" readonly><%= @cashflow.year %></textarea>
</div>

<div class="jumbotron">
  <strong>Accounting date:</strong><br><br>
  <textarea rows="1" cols="80" readonly> <%= @cashflow.accounting_date %></textarea>
</div>

<div class="jumbotron">
  <strong>Name:</strong><br><br>
  <textarea rows="1" cols="80" readonly><%= @cashflow.name %></textarea>
</div>


<div class="jumbotron">

  <stong> Total Income (€): </stong><br><br>

  <p> <%= @totalinflow %></p><br>


  <stong> Total Expenses (€): </stong><br><br>

  <p> <%= @totaloutflow %></p>

  <stong> Balance (€): </stong><br><br>

  <p> <%= @balance %></p>


  <div><h2 style="font-size: 15px;background-color: goldenrod;color: white"><strong>Income Summary:</strong></h2></div>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Date</th>
      <th>Details </th>
      <th>Owner</th>
      <th>Amount(€)</th>
    </tr>
    </thead>

    <tbody>
    <% @inflows.each do |income| %>
      <tr>
        <td><%= income.created_at%></td>
        <td><%= income.details %></td>
        <td><%= income.owner %></td>
        <td><%= income.amount %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div><h2 style="font-size: 15px;background-color: goldenrod;color: white"><strong>Expenses Summary:</strong></h2></div>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Date</th>
      <th>Details </th>
      <th>Owner</th>
      <th>Amount(€)</th>
    </tr>
    </thead>

    <tbody>
    <% @outflows.each do |expense| %>
      <tr>
        <td><%= expense.created_at%></td>
        <td><%= expense.details %></td>
        <td><%= expense.owner %></td>
        <td><%= expense.amount %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>




<div><h2 style="font-size: 15px;background-color: navy;color: white"><strong> Inflows</strong></h2></div>
<br>
<div>

  <% for cash in @cashflow.inflows %>

    <div class="jumbotron">

      <div>
        <strong>Owner:</strong><br><br>
        <textarea rows="4" cols="80" readonly> <%=h cash.owner %> </textarea>
      </div>
      <br>
      <div>
        <strong>Type:</strong><br><br>
        <textarea rows="4" cols="80" readonly>  <%=h cash.flow_type %> </textarea>
      </div>
      <br>
      <div>
        <strong>Amount:</strong><br><br>
        <textarea rows="4" cols="80" readonly> <%=h cash.amount %></textarea>
      </div>
      <br>
      <div>
        <strong> Details:</strong>:</strong><br><br>
        <textarea rows="4" cols="80" readonly> <%=h cash.details %> </textarea>
      </div>
      <br>

    </div>
  <% end %>

</div>


<div><h2 style="font-size: 15px;background-color: navy;color: white"><strong> Outflows</strong></h2></div>
<br>
<div>

  <% for cash in @cashflow.outflows %>

    <div class="jumbotron">

      <div>
        <strong>Owner:</strong><br><br>
        <textarea rows="4" cols="80" readonly> <%=h cash.owner %> </textarea>
      </div>
      <br>
      <div>
        <strong>Type:</strong><br><br>
        <textarea rows="4" cols="80" readonly>  <%=h cash.flow_type %> </textarea>
      </div>
      <br>
      <div>
        <strong>Amount:</strong><br><br>
        <textarea rows="4" cols="80" readonly> <%=h cash.amount %></textarea>
      </div>
      <br>
      <div>
        <strong> Details:</strong>:</strong><br><br>
        <textarea rows="4" cols="80" readonly> <%=h cash.details %> </textarea>
      </div>
      <br>

    </div>
  <% end %>

</div>

<div><h2 style="font-size: 15px;background-color: navy;color: white"><strong> Comments</strong></h2></div>
<br>
<div>

  <% for comment in @cashflow.comments %>

    <div class="jumbotron">

      <div>
        <strong>Owner:</strong><br><br>
        <textarea rows="4" cols="80" readonly> <%=h comment.commentary %> </textarea>
      </div>
      <br>

    </div>
  <% end %>

</div>


<div class="links">
  <%= link_to 'Edit', edit_cashflow_path(@cashflow), class:' fa fa-edit' %> |
  <%= link_to 'Back', cashflows_path, class:' fa fa-arrow-left' %>

</div>

