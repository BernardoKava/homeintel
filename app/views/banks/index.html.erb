<p id="notice"><%= notice %></p>

<h1>Banks</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Iban</th>
      <th>Bic</th>
      <th>Accessibility</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= link_to bank.name , bank  %></td>
        <td><%= bank.address %></td>
        <td><%= bank.iban %></td>
        <td><%= bank.bic %></td>
        <td><%= bank.accessibility %></td>
        <td><%= link_to 'View', bank, class:'fa fa-eye' %></td>
        <td><%= link_to 'Edit', edit_bank_path(bank), class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', bank, method: :delete, data: { confirm: 'Are you sure?' }, class:'fa fa-remove' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="links">
<%= link_to 'New Bank', new_bank_path, class:'fa fa-plus' %>
</div>