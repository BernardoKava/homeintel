<p id="notice"><%= notice %></p>

<h1>References</h1>

<table>
  <thead>
    <tr>
      <th>Employer</th>
      <th>Referee</th>
      <th>Telephone</th>
      <th>Email</th>
      <th>Details</th>
      <th>Person</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @references.each do |reference| %>
      <tr>
        <td><%= reference.employer %></td>
        <td><%= reference.referee %></td>
        <td><%= reference.telephone %></td>
        <td><%= reference.email %></td>
        <td><%= reference.details %></td>
        <td><%= reference.person_id %></td>
        <td><%= reference.active %></td>
        <td><%= link_to 'Show', reference %></td>
        <td><%= link_to 'Edit', edit_reference_path(reference) %></td>
        <td><%= link_to 'Destroy', reference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

