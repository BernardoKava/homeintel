
<%= simple_form_for(@reference) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :employer %>
    <%= f.input :referee %>
    <%= f.input :telephone %>
    <%= f.input :email %>
    <%= f.input :details %>
    <%= f.input :person_id %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
