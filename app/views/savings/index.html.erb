<p id="notice"><%= notice %></p>

<h1>Savings</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Month</th>
      <th>Year</th>
      <th>Saving date</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @savings.each do |saving| %>
      <tr>
        <td><%= link_to saving.month, saving %></td>
        <td><%= saving.year %></td>
        <td><%= saving.saving_date.strftime("%d %b. %Y") %></td>
        <td><%= saving.name %></td>
        <td><%= link_to 'View', saving, class:'fa fa-eye' %></td>
        <td><%= link_to 'Edit', edit_saving_path(saving), class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', saving, method: :delete, data: { confirm: 'Are you sure?' },class:'fa fa-remove' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="links">
<%= link_to 'New Saving', new_saving_path, class:'fa fa-plus' %>
</div>