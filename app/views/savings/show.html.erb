<p id="notice"><%= notice %></p>


<div class="jumbotron">
  <strong>Month:</strong><br><br>
  <textarea rows="1" cols="80" readonly> <%= @saving.month %></textarea>
</div>

<div class="jumbotron">
  <strong>Year:</strong><br><br>
  <textarea rows="1" cols="80" readonly> <%= @saving.year %></textarea>
</div>

<div class="jumbotron">
  <strong>Saving date:</strong><br><br>
  <textarea rows="1" cols="80" readonly> <%= @saving.saving_date %></textarea>
</div>

<div class="jumbotron">
  <strong>Name:</strong><br><br>
  <textarea rows="1" cols="80" readonly>  <%= @saving.name %></textarea>
</div>

<div class="jumbotron">
  Saving ID:<%=h @saving.id %>
</div>


<div class="jumbotron">

  <stong> Total Monthly Lodgement (€): </stong><br><br>

  <p> <%= @totallodgement %></p><br>


  <stong> Total Monthly Withdrawal (€): </stong><br><br>

  <p> <%= @totalwithdrawal %></p>

  <stong> Monthly Balance (€): </stong><br><br>

  <p> <%= @balance %></p>


  <div><h2 style="font-size: 15px;background-color: goldenrod;color: white"><strong>Lodgement Summary:</strong></h2></div>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Date</th>
      <th>Details </th>
      <th>Owner</th>
      <th>Amount(€)</th>
      <th>Institution</th>
    </tr>
    </thead>

    <tbody>
    <% @lodgments.each do |income| %>
      <tr>
        <td><%= income.created_at.strftime("%d %b. %Y")%></td>
        <td><%= income.details %></td>
        <td><%= income.owner %></td>
        <td><%= income.amount %></td>
        <td><%= income.institution %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div><h2 style="font-size: 15px;background-color: goldenrod;color: white"><strong>Withdrawal Summary:</strong></h2></div>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Date</th>
      <th>Details </th>
      <th>Owner</th>
      <th>Amount(€)</th>
      <th>Institution</th>
    </tr>
    </thead>

    <tbody>
    <% @withdrawals.each do |expense| %>
      <tr>
        <td><%= expense.created_at.strftime("%d %b. %Y")%></td>
        <td><%= expense.details %></td>
        <td><%= expense.owner %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.institution %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>




<div><h2 style="font-size: 15px;background-color: navy;color: white"><strong>Lodgements</strong></h2></div>
<br>
<div>

  <% for cash in @saving.lodgements %>

    <div class="jumbotron">

      <div>
        <strong>Owner:</strong><br><br>
        <textarea rows="1" cols="80" readonly> <%=h cash.owner %> </textarea>
      </div>
      <br>
      <div>
        <strong>Type:</strong><br><br>
        <textarea rows="1" cols="80" readonly>  <%=h cash.institution %> </textarea>
      </div>
      <br>
      <div>
        <strong>Amount:</strong><br><br>
        <textarea rows="1" cols="80" readonly> <%=h cash.amount %></textarea>
      </div>
      <br>
      <div>
        <strong> Details:</strong>:</strong><br><br>
        <textarea rows="1" cols="80" readonly> <%=h cash.details %> </textarea>
      </div>
      <br>
      <div>
        Registered on:
        <%=h cash.created_at.strftime("%d %b. %Y") %>
      </div>
      <div>
        ID:
        <%=h cash.id %>
      </div>

    </div>
  <% end %>

</div>


