      <div class="jumbotron">
        <%= render 'withdrawal_fields', :f =>  cash %>
      </div>
    <% end %>
    <div class="form-actions">
      <%= f.button :submit,"Save" %>
    </div>
  </div>
  <hr/>
  <hr/>

  <strong><h2 style="font-size: 20px;background-color: midnightblue;color: white">Comments</h2></strong>
