
<%= simple_form_for(@saving) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :user_id,:as => :hidden, :input_html => { :value => current_user.id} %>
    <%= f.input :saving_date %>
    <%= f.input :name %>
  </div>


  <hr/>
  <hr/>

  <strong><h2 style="font-size: 20px;background-color: midnightblue;color: white">Lodgements</h2></strong>
  <div class="form-actions">
    <%= f.button :submit,"Save" %>
  </div>
  <div class="nested_fields">
    <%= link_to_add_association 'Add', f, :lodgements, class: 'fa fa-plus',style:"font-size:15px;color:green"%>
    <%= f.simple_fields_for :lodgements do |cash| %>
      <div class="jumbotron">
        <%= render 'lodgement_fields', :f =>  cash %>
      </div>
    <% end %>
    <div class="form-actions">
      <%= f.button :submit,"Save" %>
    </div>
  </div>
  <hr/>
  <hr/>

  <strong><h2 style="font-size: 20px;background-color: midnightblue;color: white">Withdrawals</h2></strong>
