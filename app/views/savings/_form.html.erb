    <%= f.simple_fields_for :comments do |cash| %>
      <div class="jumbotron">
        <%= render 'comment_fields', :f =>  cash %>
      </div>
    <% end %>
    <div class="form-actions">
      <%= f.button :submit,"Save" %>
    </div>

  </div>
  <hr/>
  <hr/>




