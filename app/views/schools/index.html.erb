<p id="notice"><%= notice %></p>

<h1>Schools</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Telephone</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%=link_to school.name, school %></td>
        <td><%= school.address %></td>
        <td><%= school.email %></td>
        <td><%= school.telephone %></td>

        <td><%= link_to 'View', school, class: 'fa fa-eye' %></td>
        <td><%= link_to 'Edit', edit_school_path(school), class: 'fa fa-edit' %></td>
        <td><%= link_to 'Delete', school, method: :delete, data: { confirm: 'Are you sure?' } , class: 'fa fa-remove'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="links">
<%= link_to 'New School', new_school_path , class: 'fa fa-plus'%>
</div>