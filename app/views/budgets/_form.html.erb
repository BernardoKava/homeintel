
<%= simple_form_for(@budget) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :user_id ,:as => :hidden, :input_html => { :value => current_user.id} %>
    <%= f.input :budget_date %>
    <%= f.input :name %>
  </div>

  <hr/>
  <hr/>
  <strong><h2 style="font-size: 20px;background-color: midnightblue;color: white">Add Income(s)</h2></strong>

  <div class="nested_fields">
    <%= link_to_add_association 'Add', f, :incomes, class: 'fa fa-plus',style:"font-size:15px;color:green"%>
    <%= f.simple_fields_for :incomes do |income| %>
      <div class="jumbotron">
        <%= render 'income_fields', :f => income %>
      </div>
    <% end %>
  </div>
  <hr/>
  <hr/>


  <strong><h2 style="font-size: 20px;background-color: midnightblue;color: white">Add expense(s)</h2></strong>

        <div class="nested_fields">
              <%= link_to_add_association 'Add', f, :expenses, class: 'fa fa-plus',style:"font-size:15px;color:green"%>
              <%= f.simple_fields_for :expenses do |expense| %>
        <div class="jumbotron">
              <%= render 'expense_fields', :f => expense %>
        </div>
              <% end %>
          </div>
  <hr/>
  <hr/>


  <strong><h2 style="font-size: 20px;background-color: midnightblue;color: white">Add Comment(s)</h2></strong>

  <div class="nested_fields">
    <%= link_to_add_association 'Add', f, :comments, class: 'fa fa-plus',style:"font-size:15px;color:green"%>
    <%= f.simple_fields_for :comments do |comment| %>
      <div class="jumbotron">
        <%= render 'expense_fields', :f => comment %>
      </div>
    <% end %>
  </div>
  <hr/>
  <hr/>



  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<br>