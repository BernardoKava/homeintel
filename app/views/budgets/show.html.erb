<p id="notice"><%= notice %></p>



<div class="jumbotron">
  <strong>Month:</strong><br>
  <textarea rows="1" cols="80" readonly>   <%= @budget.month %></textarea>
</div>

<div class="jumbotron">
  <strong>Year:</strong><br>
  <textarea rows="1" cols="80" readonly>  <%= @budget.year %></textarea>
</div>

<div class="jumbotron">
  <strong>Budget date:</strong><br>
  <textarea rows="1" cols="80" readonly>  <%= @budget.budget_date %></textarea>
</div>

<div class="jumbotron">
  <strong>Name:</strong><br>
  <textarea rows="1" cols="80" readonly> <%= @budget.name %></textarea>
</div>


<div class="jumbotron">

  <stong> Total Income (€): </stong><br><br>

 <p> <%= @totalincome %></p><br>


  <stong> Total Expenses (€): </stong><br><br>

  <p> <%= @totalexpense %></p>


  <div><h2 style="font-size: 15px;background-color: goldenrod;color: white"><strong>Income Summary:</strong></h2></div>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Date</th>
      <th>Details </th>
      <th>Owner</th>
      <th>Amount(€)</th>
    </tr>
    </thead>

    <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.created_at%></td>
        <td><%= income.details %></td>
        <td><%= income.owner %></td>
        <td><%= income.amount %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div><h2 style="font-size: 15px;background-color: goldenrod;color: white"><strong>Expenses Summary:</strong></h2></div>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Date</th>
      <th>Details </th>
      <th>Owner</th>
      <th>Amount(€)</th>
    </tr>
    </thead>

    <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.created_at%></td>
        <td><%= expense.details %></td>
        <td><%= expense.owner %></td>
        <td><%= expense.amount %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>



<div><h2 style="font-size: 15px;background-color: navy;color: white"><strong>Section 1: Incomes</strong></h2></div>
<br>
<% for income in @budget.incomes %>
  <div class="jumbotron">
    <div>
        <strong>Owner:</strong><br><br>
        <textarea rows="1" cols="80" readonly>  <%= income.owner %></textarea>
    </div>

    <div>
        <strong>Amount:</strong><br><br>
        <textarea rows="1" cols="80" readonly>  <%= income.amount %></textarea>
    </div>

    <div>
        <strong>Details:</strong><br><br>
        <textarea rows="1" cols="80" readonly>  <%= income.details %></textarea>
    </div>

    <div>
      <strong>Type:</strong><br><br>
      <textarea rows="1" cols="80" readonly>  <%= income.income_type %></textarea>
    </div>
  </div>

<% end %>



<div><h2 style="font-size: 15px;background-color: navy;color: white"><strong>Section 2: Expenses</strong></h2></div>
<br>
<% for expense in @budget.expenses %>
  <div class="jumbotron">
    <div>
      <strong>Owner:</strong><br><br>
      <textarea rows="1" cols="80" readonly>  <%= expense.owner %></textarea>
    </div>

    <div>
      <strong>Amount:</strong><br><br>
      <textarea rows="1" cols="80" readonly>  <%= expense.amount %></textarea>
    </div>

    <div>
      <strong>Details:</strong><br><br>
      <textarea rows="1" cols="80" readonly>  <%= expense.details %></textarea>
    </div>

    <div>
      <strong>Type:</strong><br><br>
      <textarea rows="1" cols="80" readonly>  <%= expense.expense_type %></textarea>
    </div>
  </div>

<% end %>

<div><h2 style="font-size: 15px;background-color: navy;color: white"><strong>Section 3: Comments</strong></h2></div>
<br>
<% for comment in @budget.comments %>
  <div class="jumbotron">
    <div>
      <strong>Comment:</strong><br><br>
      <textarea rows="1" cols="80" readonly>  <%= comment.commentary %></textarea>
    </div>
  </div>

<% end %>

<div class="links">
  <%= link_to 'Edit', edit_budget_path(@budget), class:'fa fa-edit' %> |
  <%= link_to 'Back', budgets_path, class:'fa fa-arrow-left'  %>
</div>
