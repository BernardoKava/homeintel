<div class="fa fa-archive", id="dashboard">
  Legacy Transactions
</div>
<br><br>





<div class="jumbotron">

  <div>
    <%= form_tag(dashboard_legacy_path , method: :get) do %>
      <%= text_field_tag :term , params[:term]%>
      <%= submit_tag 'Search', name: nil %>
    <% end %>
    <br>
    Total value: â‚¬ <%= @total.round(2) %> |
    Found: <%= @records %> records
  </div>

  <div><h2 style="font-size: 15px;background-color: goldenrod;color: white"><strong>Ulsterbank Transactions:</strong></h2></div>
  <table class=" table table-hover">
    <thead>
    <tr>
      <th>Transaction Date</th>
      <th>Type</th>
      <th>Description</th>
      <th>Value</th>
      <th>Account Name</th>
      <th>Account Number</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @ulster_bank_transactions.each do |trans| %>
      <tr>
        <td><%= trans.trans_date.strftime("%d, %b  %Y") %></td>
        <td><%= trans.trans_type %></td>
        <td><%= trans.description %></td>
        <td><%= trans.trans_value %></td>
        <td><%= trans.account_name %></td>
        <td><%= trans.account_number %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= will_paginate @ulster_bank_transactions %>
  <hr>
</div>