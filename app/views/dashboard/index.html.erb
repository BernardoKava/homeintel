<div class="jumbotron">

  <div><h2 style="font-size: 15px;background-color: goldenrod;color: white"><strong>Budgets:</strong></h2></div>
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Month</th>
      <th>Year</th>
      <th>Budget date</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= link_to budget.month, budget%></td>
        <td><%= budget.year %></td>
        <td><%= budget.budget_date.strftime("%d %b. %Y") %></td>
        <td><%= budget.name %></td>
        <td><%= link_to 'View', budget, class:'fa fa-eye' %></td>
        <td><%= link_to 'Edit', edit_budget_path(budget), class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', budget, method: :delete, data: { confirm: 'Are you sure?' }, class:'fa fa-remove' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= will_paginate @budgets %>

<hr>

  <%= link_to "Finance Summary", dashboard_financial_path, class:'fa fa-money' %>
</div>
