<p id="notice"><%= notice %></p>

<h1>Deliveries</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Delivery date</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.delivery_date %></td>
        <td><%= delivery.owner %></td>
        <td><%= link_to 'View', delivery , class:'fa fa-eye' %></td>
        <td><%= link_to 'Edit', edit_delivery_path(delivery), class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', delivery, method: :delete, data: { confirm: 'Are you sure?' }, class:'fa fa-remove' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="links">
<%= link_to 'New Delivery', new_delivery_path, class:'fa fa-plus' %>
</div>